{
	"compilerOptions": {
		"lib": ["DOM", "ES2020"],
		"jsx": "react-jsx",
		"target": "ES2020",
		"skipLibCheck": true,
		"useDefineForClassFields": true,

		/* modules */
		"module": "ESNext",
		"moduleDetection": "force",
		"moduleResolution": "bundler",
		"verbatimModuleSyntax": true,
		"resolveJsonModule": true,
		"noUncheckedSideEffectImports": true,

		/* type checking */
		"strict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,

		/* declaration */
		"declaration": true,
		"declarationDir": "./dist",
		"emitDeclarationOnly": true
	},
	"include": ["src"],
	"exclude": [
		"node_modules",
		"dist",
		"**/*.stories.tsx",
		"**/*.test.tsx",
		"**/*.spec.tsx"
	]
}
